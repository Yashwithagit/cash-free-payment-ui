{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["app/components/*"],
      "@/lib/*": ["app/lib/*"],
      "@/hooks/*": ["app/hooks/*"],
      "@/provider/*": ["app/provider/*"],
      "@/redux/*": ["app/redux/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
, "app/redux/product/productSlice.js", "app/hooks/useOnlineStatus.jsx", "app/lib/constant.js"  ],
  "exclude": [
    "node_modules"
  ]
}
